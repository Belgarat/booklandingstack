{
  "colors": {
    "primary": "#000000",
    "secondary": "#ffffff",
    "accent": "#ff0000",
    "background": "linear-gradient(135deg, #000000 0%, #ffffff 50%, #ff0000 100%)",
    "text": {
      "primary": "#ffffff",
      "secondary": "#cccccc",
      "muted": "#999999"
    },
    "success": "#00ff00",
    "error": "#ff0000",
    "warning": "#ffff00"
  },
  "fonts": {
    "heading": "serif",
    "body": "system-ui",
    "mono": "ui-monospace"
  },
  "layout": {
    "type": "hero-focus",
    "showCountdown": true,
    "showStories": true,
    "showTestimonials": true,
    "showAwards": true,
    "showRankings": true
  },
  "spacing": {
    "container": "max-w-7xl",
    "section": "py-20",
    "element": "mb-6"
  },
  "animations": {
    "enabled": true,
    "duration": "300ms",
    "easing": "ease-in-out"
  },
  "development": {
    "analytics": false,
    "tracking": false,
    "debug": true,
    "hotReload": true
  }
}